@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels

@model LoginViewModel

<h2>Log in with your account/credentials</h2>
<hr />
@using (Html.BeginForm())
{

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { @required = true })

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { @required = true })

    <input type="submit" value="Log in" class="btn btn-default" />

}

<p>
  <a href='javascript:history.go(-1)' class="btn btn-primary">Go Back to Previous Page</a>
</p>