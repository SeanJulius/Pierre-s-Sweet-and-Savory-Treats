@{
  Layout = "_Layout";
}
@using PierresTreats.Models;


<h1>Flavors</h1>

@if (Model.Count == 0)
{
  <h3>Flavors have not been added!</h3>
} 

<ul>
  @foreach(Flavor Flavor in Model)
  {

    <li>
      @Html.ActionLink($"{Flavor.Name}", "Details", new { id = Flavor.FlavorId })
      | Quantity of treats: @(Flavor.JoinEntities.Count)
    </li>

  }
</ul>

<p>
  <a asp-action="Create"
    asp-controller="Flavors"
    class="btn btn-primary"><i class="bi bi-plus-square"></i> Add New Flavor 
  </a>
</p> 
<p>
  <a asp-action="Index"
    asp-controller="Home"
    class="btn btn-primary"><i class="bi bi-house-fill"></i> Home
  </a>
</p> 